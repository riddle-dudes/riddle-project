	<div class="row">
		<div class="col-md-4">
			<h1><span id="name"></span></span> - <span id="level"></span></h1>
		</div>
		<div class="col-md-4">
		</div>
		<div class="col-md-4">
			<h1 class="pull-right"><i class="fa fa-usd" aria-hidden="true"></i><span id="coins"></h1>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron">
				<h3 id="riddle"></h3>
