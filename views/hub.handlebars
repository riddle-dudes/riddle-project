<link rel="stylesheet" href="/css/hub.css" type="text/css"/>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h1><span id="name"></span></span> - Level <span id="level"></span></h1>
		</div>
		<div class="col-md-4">
		</div>
		<div class="col-md-4">
			<h1 class="pull-right"><i class="fa fa-usd" aria-hidden="true"></i><span id="coins"></h1>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron">
				<div class="row">
					<div class="col-md-10">
						<div>
						<h3 id="riddle"></h3>
						<h1 id="correct">You got it!</h1>
						<h1 id="wrong">That couldn't have been more wrong</h1>
						</div>
					</div>
					<div class="col-md-2 text-center">
						<div id="percent-container">
							<h5>How many got this correct</h5>
							<h1 id="percent">21%</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-8 text-center">
			<input type="text" class="form-control" id="submit-answer" placeholder="What's the answer?"></input>
		</div>
		<div class="col-md-2">
		</div>
	</div>
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-3 text-center">
			<button type="submit" id="answer"><i class="fa fa-check fa-4x" aria-hidden="true"></i></button>
		</div>
			<div class="col-md-2"></div>
		<div class="col-md-3 text-center">
			<a href="/leaderboard"><button type="submit" id="leaderboard"><i class="fa fa-list-alt fa-4x" aria-hidden="true"></i></button></a></div>
		<div class="col-md-2">
		</div>
	</div>
</div>

